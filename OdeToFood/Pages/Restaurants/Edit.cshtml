@page "{id:int?}"

@model OdeToFood.Pages.Restaurants.EditModel

@{
    ViewData["Title"] = "Edit Restaurant";
}

    <form method="post">
        <input type="hidden" asp-for="Restaurant.Id" />

        <div class="form-group">
            <label asp-for="Restaurant.Name"></label>
            <input asp-for="Restaurant.Name" class="form-control" />
            <span asp-validation-for="Restaurant.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Restaurant.Location"></label>
            <input asp-for="Restaurant.Location" class="form-control" />
            <span asp-validation-for="Restaurant.Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Restaurant.Cusine"></label>
            <select asp-for="Restaurant.Cusine" class="form-control"
                    asp-items="Model.Cuisines"></select>
            <span asp-validation-for="Restaurant.Cusine" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>        
        <a asp-page="@Model.CancelDestination" asp-route-id="@Model.Restaurant.Id" class="btn btn-secondary">Cancel</a>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial"/>
    }